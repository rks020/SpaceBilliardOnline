    <com.spacebilliard.app.ui.PlanetView
        android:id="@+id/imgJupiter"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:contentDescription="Neon Planet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/titleDivider"/>

    <!-- RANKING & GUIDE BUTTONS -->
    <LinearLayout
        android:id="@+id/panelCenterButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgJupiter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- RANKING -->
        <LinearLayout
            android:id="@+id/btnRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_gold"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_trophy"
                android:tint="#FFC107"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RANKING"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- GUIDE -->
        <LinearLayout
            android:id="@+id/btnGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_cyan"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:tint="#00E5FF"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUIDE"
                android:textColor="#00E5FF"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:letterSpacing="0.4"
                android:text="SYSTEM READY"
                android:textColor="#33FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />





        </androidx.constraintlayout.widget.ConstraintLayout>
    
    </ScrollView>
    
    <!-- ================== CUSTOM BOTTOM BAR (5 BUTTONS) ================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_bar"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- UPGRADES (Sol 1) -->
        <LinearLayout
            android:id="@+id/btnBottomUpgrades"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBottomQuests"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_upgrades"
                android:tint="#66FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPGRADES"
                android:textSize="9sp"
                android:textColor="#66FFFFFF"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- QUESTS (Sol 2) -->
        <LinearLayout
            android:id="@+id/btnBottomQuests"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/btnBottomUpgrades"
            app:layout_constraintEnd_toStartOf="@id/btnBottomPlayPlaceholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/quests"
                android:tint="#66FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUESTS"
                android:textSize="9sp"
                android:textColor="#66FFFFFF"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- PLAY (Ortada Büyük) -->
        <!-- PLAY PLACEHOLDER (To keep spacing) -->
        <View
            android:id="@+id/btnBottomPlayPlaceholder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/btnBottomQuests"
            app:layout_constraintEnd_toStartOf="@id/btnBottomSpecial"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1.3" />

        <!-- SPECIAL (Sağ 1) -->
        <LinearLayout
            android:id="@+id/btnBottomSpecial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/btnBottomPlayPlaceholder"
            app:layout_constraintEnd_toStartOf="@id/btnBottomShop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gamepad"
                android:tint="#66FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODES"
                android:textSize="9sp"
                android:textColor="#66FFFFFF"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- SHOP (Sağ 2) -->
        <LinearLayout
            android:id="@+id/btnBottomShop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/btnBottomSpecial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_shop"
                android:tint="#66FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP"
                android:textSize="9sp"
                android:textColor="#66FFFFFF"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- ======================================================= -->

    <!-- ================== FLOATING PLAY BUTTON (Overlay) ================== -->
    <!-- Positioned manually to float over the bottom bar -->
    <LinearLayout
        android:id="@+id/btnBottomPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_neon_play">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play"
                android:tint="@android:color/white"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textSize="12sp"
            android:textColor="#00BCD4"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

</FrameLayout>
