<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141428"
    android:clickable="true"
    android:focusable="true">

    <!-- Custom Animated Background -->
    <com.spacebilliard.app.ui.StarfieldBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp">

            <!-- Container Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-black"
                    android:shadowColor="#00FFFF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20"
                    android:text="HOW TO PLAY"
                    android:textColor="#00FFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- 1. OBJECTIVE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="OBJECTIVE"
                    android:textColor="#00E5FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Clear all colored balls before time runs out!\nAim, drag, and release to shoot the white ball.\nComplete 10 stages to unlock the next Space."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- 2. CONTROLS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="CONTROLS"
                    android:textColor="#00E5FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"
                    android:text="â€¢ Drag anywhere on the screen to aim.\nâ€¢ Release to launch the White Ball.\nâ€¢ The further you drag, the more power you use."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- 3. RULES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="RULES"
                    android:textColor="#00E5FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"
                    android:text="â€¢ Avoid Black Balls! Hitting them will cost you a life.\nâ€¢ If you run out of lives, it's Game Over.\nâ€¢ You have limited time per level in higher stages."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- 4. POWER-UPS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="POWER-UPS"
                    android:textColor="#00E5FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Collect special colored balls for power-ups:\nðŸŸ  Orange: +5 seconds extra time\nðŸŸ¡ Gold: Power boost for strong shot\nðŸŸ£ Purple: Barrier shield protection\nðŸ”µ Cyan: Electric chain reaction\nðŸ”´ Red: Missile homing attack\nðŸŸ¢ Green: Teleport to safety"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnGotIt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="GOT IT"
                    android:background="@drawable/btn_return_hq"
                    android:textColor="#EAFBFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.08"
                    android:elevation="6dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
