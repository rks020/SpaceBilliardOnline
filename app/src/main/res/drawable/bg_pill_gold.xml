<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#44FFD700"> <!-- Ripple Color -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#33000000" /> <!-- Transparent Black -->
            <stroke android:width="1dp" android:color="#FFC107" /> <!-- Gold Stroke -->
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
</ripple>
