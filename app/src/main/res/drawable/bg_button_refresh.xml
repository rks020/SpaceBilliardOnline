<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0056b3" /> <!-- Darker blue on press -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#2A3045" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#1A2035" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#2A3045" />
        </shape>
    </item>
</selector>
